<html>
    <head>
        <link rel="stylesheet" type="text/css" href="/css/bootstrap.css">
        <link rel="stylesheet" type="text/css" href="/css/flat-ui.css">
        <link rel="stylesheet" type="text/css" href="/css/webapp.css">

        <script type="text/javascript"
src="//static.twilio.com/libs/twiliojs/1.1/twilio.min.js"></script>
        <script src="/js/jquery-1.9.1.min.js" type="text/javascript"></script>
        <script src="/js/underscore.js" type="text/javascript"></script>
        <script src="/js/backbone.js" type="text/javascript"></script>
        <script src="/js/backbone-poller.js" type="text/javascript"></script>
        <script src="/js/webapp.js" type="text/javascript"></script>

        <script type="text/javascript">
            $(function() {
                var conference = new CallIn.Conference({
                    "conferenceCode": {{ conferenceCode }},
                    "token": "{{ token }}"
                });

                var conferenceView = new CallIn.ConferenceView({
                    "model": conference,
                    "el": $("#conference-container")
                });
                
            });
        </script>
    </head>
    <body>
        <script type="text/template" id="conference-template">
            <div class="row-fluid">
                <div class="span12 title">
                    <h1>
                        <%= title %>
                        <small> <%= description %> </small>
                    </h1>
                    <div id="call-status">
                        Preparing Twilio device...
                    </div>
                </div>
            </div>
            <hr>
            <div class="row-fluid">
                <div class="span12">
                    <div class="attendees" id="attendees-container">
                        <ul id="attendee-list">
                        </ul>
                    </div>
                </div>
            </div>
        </script>

        <script type="text/template" id="attendee-template">
            <div class="attendees-content">
                <h4 class="attendees-name"><%= displayName %></h4>
                <%= email %>
            </div>
        </script>

        <div class="container-fluid" id="conference-container">
            
        </div>
    </body>
</html>
