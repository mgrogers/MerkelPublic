        <script type="text/javascript">
            function completedGoogleAuth() {
                console.log("Called back");
                $('#google-must-auth').fadeOut(function() {
                    $("#google-completed-auth").fadeIn();
                });
            }

            $(document).ready(function() {
                Parse.initialize('ljgVpGcSO3tJlAFRosuoGhLuWElPbWapt4Wy5uoj',
                      'LuF9wF7h9GRzarp6FnYjdGUGHQtOrlxUeoC3CJqM');

                var currentUser = Parse.User.current();
                if (currentUser) {
                    $('#name').text(currentUser.get("first_name"));
                    if(currentUser.get("google_refresh_token")) {
                        $('#google-completed-auth').fadeIn();
                    } else {
                        $('#google-must-auth').fadeIn();
                    }
                    $('#account-info').fadeIn();

                } else {
                    alert("Looks like there was a problem logging you in... redirecting.");
                    window.location = '/';
                }
            });

        </script>

